@model AppointmentModel
@Html.Partial("_LayoutPartial")
<div class="container">
    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true) 
            <fieldset>
                <legend>Appointment Scheduling</legend>

                @Html.HiddenFor(model => model.Appointment.Id)

                <!-- customer -->
                <div class="control-group col-lg-6">
                    <label class="control-label"></label>
                    <div class="controls ">
                        <b>@Html.DisplayFor(model => model.Appointment.Customer.Fullname)</b><br/>
                        @Html.DisplayFor(model => model.Appointment.Customer.Address)<br/>
                        @Html.DisplayFor(model => model.Appointment.Customer.City)<br/>
                    </div>
                </div>
                <!-- schedule input-->
                <div class="control-group col-lg-6">
                    <label class="control-label">Schedule</label>
                    <div class="controls ">
                        @Html.TextBox("Appointment.ScheduledStart", Model.Appointment.ScheduledStart.ToString("MM/dd/yyyy"), new { @class = "datetimepicker" })
                        @Html.Hidden("CurrentAppointmentTime", Model.Appointment.ScheduledStart.ToString("HH:mm"))
                        @Html.ValidationMessageFor(model => model.Appointment.ScheduledStart)
                        <select id="AppointmentTime" name="AppointmentTime"></select>
                        @Html.ValidationMessageFor(model => model.AppointmentTime)
                        <span id="progress">
                            <img src="~/Images/Progress.gif" /></span>
                    </div>
                </div>
                <div class="control-group col-lg-6">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Index", new { @class = "btn" })
                </div>
            </fieldset>
        }
    </div>
</div>
