@model Appointment
@Html.Partial("_LayoutPartial")
<div class="container">
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Appointment Routing</legend>
            @Html.HiddenFor(model => model.Id)

            <!-- customer -->
            <div class="control-group col-lg-6">
                <label class="control-label"></label>
                <div class="controls ">
                    <b>@Html.DisplayFor(model => model.Customer.Fullname)</b><br />
                    @Html.DisplayFor(model => model.Customer.Address)<br />
                    @Html.DisplayFor(model => model.Customer.City)<br />
                </div>
            </div>
            <!-- appointment -->
            <div class="control-group col-lg-6">
                <label class="control-label"><b>Scheduled</b></label>
                <div class="controls ">
                    @Html.Display("Appointment.ScheduledStart", Model.ScheduledStart != null ? Model.ScheduledStart.ToString("dd/M/yyyy HH:mm") : "", new { })
                </div>
            </div>
            <!-- employee -->
            <div class="control-group col-lg-6">
                <label class="control-label"><b>Assigned</b></label>
                <div class="controls ">
                    @Html.DisplayFor(model => model.EmployeeId)
                </div>
            </div>
            <div class="control-group col-lg-6">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Assign" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Index", new { @class = "btn" })
                }
            </div>
        </fieldset>
    </div>
</div>
